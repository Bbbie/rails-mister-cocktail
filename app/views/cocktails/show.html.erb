<div class="container">
  <div class="card-cocktail">
    <%= cl_image_tag @cocktail.photo.key, class: "show-cocktail-image" %>
    <div class="card-cocktail-show-infos">
      <h1><%= @cocktail.name %></h1>
      <div class="ingredients-info">
        <div class="ingredients-there">
        <% if @cocktail.doses.count == 0 %>
          <p>No ingredients yet.</p>
        <% else %>
          <p class='ingredients-title'>Ingredients:</p>
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li>ðŸ‘‰
                <%= dose.description %> of
                <%= dose.ingredient.name %>  |
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure? This is irreversible." } do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
        </div>
        <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
      </div>
    </div>
