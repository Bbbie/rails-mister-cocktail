<div class="container">
  <div class="card-cocktail-show">
    <%= cl_image_tag @cocktail.photo.key, class: "show-cocktail-image" %>
    <div class='card-cocktail-info-show'>
      <h1><%= @cocktail.name %></h1>
      <div>
        <div>
        <% if @cocktail.doses.count == 0 %>
          <p>No ingredients yet.</p>
        <% else %>
          <p class='ingredients-title'>Ingredients:</p>
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li>
                <div class='dose'> ðŸ‘‰
                  <%= dose.description %>
                  <%= dose.ingredient.name %>
                </div>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete #{dose.ingredient.name} from the ingredients?" } , class: 'delete-hide' do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
        </div>
        <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary-small" %>
      </div>
    </div>
  </div>
  <%= link_to "ðŸ‘ˆ Back to all Cocktails", cocktails_path %>
</div>
