<div class="container">
  <div class="top">
    <h1>Drinks, drinks, drinks! 🍸</h1>
    <%= link_to "add a drink", new_cocktail_path, class:"btn btn-primary" %>
  </div>

  <div class="main-content">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>

      <%= link_to cocktail_path(cocktail), class: "cocktail" do %>
          <div class="card-cocktail">
            <%= cl_image_tag cocktail.photo.key, class: "card-cocktail-image" %>
            <div class="card-cocktail-infos">
              <div>
                <h2><%= cocktail.name%></h2>
                <p>
                  <% cocktail.ingredients.each do |ingredient| %>
                    <%= ingredient.name %>
                    <% unless ingredient == cocktail.ingredients.last %>
                      |
                    <% end %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
    <% end %>
    </div>
  </div>
</div>



